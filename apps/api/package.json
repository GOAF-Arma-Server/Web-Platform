{
  "name": "@repo/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./trpc": {
      "types": "./src/trpc/router.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "lint": "biome check",
    "format": "biome format --write",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "1.14.1",
    "@hono/trpc-server": "0.3.4",
    "@trpc/server": "11.1.2",
    "better-auth": "1.2.8",
    "drizzle-orm": "0.44.2",
    "hono": "4.7.10",
    "postgres": "3.4.7",
    "resend": "4.5.2",
    "superjson": "2.2.2",
    "zod": "3.25.28"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "22.15.3",
    "drizzle-kit": "0.31.1",
    "dotenv": "16.4.7",
    "tsup": "8.5.0",
    "tsx": "4.19.4",
    "typescript": "5.9.2",
    "vitest": "4.0.0"
  }
}
